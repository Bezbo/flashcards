<h3><%= t("deck") %></h3>

<table class="table-condensed">
  <tr>
    <td><%= t("simple_form.labels.deck.name") %>: <%= @deck.name %></td>
  </tr>
  <tr>
    <td><%= t(".quantity_of_cards_in_deck") %>: <%= @deck.cards.count %></td>
  </tr>
  <tr>
    <td><%= link_to t("edit"), edit_deck_path(@deck),
                               class: "btn btn-default" %></td>
  </tr>
  <tr>
    <td><%= link_to t("delete"), @deck, method: :delete,
                                        data: { confirm: t("are_you_sure") },
                                        class: "btn btn-default" %></td>
  </tr>
</table>

<h4><%= t(".cards_in_this_deck") %>:</h4>

<table class="table">
  <thead>
    <tr>
      <th><%= t("original") %></th>
      <th><%= t("translate") %></th>
      <th><%= t("review_date") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deck.cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
        <td><%= link_to t("edit"), edit_card_path(card),
                                   class: "btn btn-default" %></td>
        <td><%= link_to t("delete"), card, method: :delete,
                                           data: { confirm: I18n.t("are_you_shure") },
                                           class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>